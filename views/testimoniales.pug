extends ./layout/index

block contenido 
    main.container.mt-5
        h1.text-center.mt-5=pagina
        include ./layout/bloque_testimoniales

        .row
            .col-md-12
                h2.d-block.w-100.text-center Cuentanos tu Experiencia
            
                if(advertencia)       
                    .alert.col.text-center.alert-danger #{advertencia}

            .row.justify-content-center.col
                .col-md-8   
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value= nombre)  
                        .form-group 
                            label(for="email") Email
                            input#correo(type="text", placeholder="Tu Email", name="email", class="form-control", value= email)  
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", placeholder="Tu Mensaje", cols="3", class="form-control")= mensaje   
                        input.btn.btn-success.btn-block(type="submit")
        